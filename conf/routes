# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# User
POST          /user/register                controllers.UserController.register()
POST          /user/login                   controllers.UserController.login()
GET           /user/:id                    controllers.UserController.get(id: java.util.UUID)
#POST          /user/:id                    controllers.UserController.save(id)

# Spells
GET           /spells                       controllers.SpellController.list
GET           /spell/:id                    controllers.SpellController.get(id)
PUT           /spell/:id                    controllers.SpellController.save(id)
DELETE        /spell/:id                    controllers.SpellController.delete(id)
GET           /spells/:classId              controllers.SpellController.listByClass(classId: Int)
PUT           /spells/:classId/slots        controllers.SpellController.saveSlots(classId)
DELETE        /spell/effect/:id             controllers.SpellController.deleteEffect(id)
DELETE        /spell/trigger/:id            controllers.SpellController.deleteTrigger(id)

# Towns
GET           /town/:id                     controllers.TownController.get(id: java.util.UUID)
GET           /towns/user/:user_id          controllers.TownController.getForUser(user_id: java.util.UUID)

# Classes
GET           /classes                      controllers.PCharacterController.classList

# Non-player Characters
GET           /npcharacters                 controllers.NPCharacterController.list
GET           /npcharacter/:id              controllers.NPCharacterController.get(id)
POST          /npcharacter/:id              controllers.NPCharacterController.save(id)
DELETE        /npcharacter/:id              controllers.NPCharacterController.delete(id)

# Player Characters

GET           /pcharacters/:user_id         controllers.PCharacterController.list(user_id: java.util.UUID)
GET           /pcharacter/:id               controllers.PCharacterController.get(id: java.util.UUID)

# Uploading

POST          /upload/image                 controllers.UploadController.imageUpload

GET           /                             controllers.Assets.at(path="/public/html", file="index.html")

OPTIONS       /*path                             controllers.GlobalController.checkPreFlight(path)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file         controllers.Assets.at(path="/public", file)
